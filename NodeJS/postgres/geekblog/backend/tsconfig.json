{
    "compilerOptions": {                        
      "target": "es6",                               
      "module": "commonjs",                           
      "outDir": "./dist",                             
      "rootDir": "./src",                             
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true                    
    },
    "include": ["src**/*.ts", "server.js"],
    "exclude":[
      "./node_modules"
    ]
  }